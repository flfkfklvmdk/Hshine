<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.tails.mapper.ClazzMapper">
    <update id="updateById">
        update clazz
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="room != null and room != ''">room = #{room},</if>
            <if test="beginDate != null">begin_date = #{beginDate},</if>
            <if test="endDate != null">end_date = #{endDate},</if>
            <if test="masterId != null and masterId !=''">master_id = #{masterId},</if>
            <if test="subject != null and subject != ''">subject = #{subject},</if>
        </set>
        where id=#{id}
    </update>

    <select id="list" resultType="org.example.tails.pojo.stu.Clazz">
    select * from clazz
    </select>
</mapper>